<%- include('layouts/header') %>

<% if (signUpMessage.length > 0) { %>
    <div class="alert alert-danger">
        <p class="text-center"><%= signUpMessage %></p> 
    </div>
<% } %>

<div class="container">
    <form action="signup" method="post">
        <div class="card mt-2">
            <div class="card-body">
                <h3 class="text-center">Ingresar datos</h3>
                <hr>
                <div class="form-group">
                    <input type="email" name="email" placeholder="Correo" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="password" name="password" placeholder="Contraseña" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="direction" placeholder="Dirección" class="form-control">
                </div>
                <hr>
                <script src="https://checkout.stripe.com/checkout.js" 
                        class="stripe-button"
                        data-key="pk_test_51GxCyxAi7g0oxNkegPzPZum6fclej1LOFW0W0I9xPJFMHgoPB8vizoemieEpPnOcCmypg2gdAYNOB670uE6yD72k00YwVHjtIE"
                        data-amount="500"
                        data-name="Libreria Online"
                        data-description="Suscripción a Libreria Online"
                        data-img="./Logo.jpeg"
                        data-locale="auto">
                </script>
                <script>
                  document.getElementsByClassName('stripe-button-el')[0].style.display = 'none';
                </script>
                <button type="submit" class="btn btn-primary btn-block">Registrarse</button>
            </div>
        </div>
    </form>
</div>



<%- include('layouts/footer') %>